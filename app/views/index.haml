!!! 5
%html
  %head
    %title Video Analytics
    = stylesheet_link_tag :application

  %body
    #container{ data: { assignment_id: @assignment_id.to_s, image_one: File.basename(@first), image_two: File.basename(@second), image_three: File.basename(@third), n: @current_choice_number, hit_id: @hit_id, worker_id: @worker_id, s3bucket: @s3_bucket, job: @job } }
      #header

      = link_to url(:choose, choice: File.basename(@first)) do
        = image_tag(@first, class: :left)
      = link_to url(:choose, choice: File.basename(@second)) do
        = image_tag(@second, class: :middle)
      = link_to url(:choose, choice: File.basename(@third)) do
        = image_tag(@third, class: :right)

  = javascript_include_tag :application
